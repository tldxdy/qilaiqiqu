<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66666666"
    android:gravity="center"
    android:id="@+id/quxiao"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical" >



            <Button
				android:id="@+id/btn_personaldataactivity_phone"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/corners_popup_baocun_top_child"
                android:gravity="center"
                android:text="标记为已读"
                android:textColor="@color/mainActivity_title"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#A8A8A8" />

            <Button
                android:id="@+id/btn_personaldataactivity_photograph"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/corners_popup_baocun_bottom_child"
                android:gravity="center"
                android:text="删除该系统消息"
                android:textColor="@color/mainActivity_title"
                android:textSize="16sp" />
            
        </LinearLayout>


</LinearLayout>
