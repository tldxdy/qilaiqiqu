<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.qizhi.qilaiqiqu.utils.CircleImageViewUtil
            android:id="@+id/img_careFragmentList_photo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_careFragmentList_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="独步天涯"
                android:textColor="@color/mainActivity_title"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_careFragmentList_personality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:text="我不是一个人在路上"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_careFragmentList_care"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/corners_bg_orange"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center"
            android:text="取消关注"
            android:textColor="@color/write" />
    </LinearLayout>

</LinearLayout>