<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
                android:layout_width="76dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_activity_activity_apply_layout"
                android:orientation="vertical" >

                <com.qizhi.qilaiqiqu.utils.CircleImageViewUtil
                    android:id="@+id/img_activityactivityapply_photo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/homepage_picture" />

                <TextView
                    android:id="@+id/txt_activityactivityapply_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_activityactivityapply_photo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="小伙子" />
            </RelativeLayout>

</LinearLayout>
