<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#6dbfed" >

        <LinearLayout
            android:id="@+id/layout_modifiPassActivity_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/return_innavigationbar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="返回"
                android:textColor="@color/write" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/text_modifipass_title"
            android:textColor="@color/write"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="39dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="输入原密码" />

    <EditText
        android:id="@+id/edt_modifiPassActivity_old"
        android:layout_width="240dp"
        android:layout_height="39dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/border_editext"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="39dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="输入新密码" />

    <EditText
        android:id="@+id/edt_modifiPassActivity_new"
        android:layout_width="240dp"
        android:layout_height="39dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/border_editext"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="39dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="确认新密码" />

    <EditText
        android:id="@+id/edt_modifiPassActivity_confirm"
        android:layout_width="240dp"
        android:layout_height="39dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/border_editext"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/txt_modifiPassActivity_commit"
        android:layout_width="240dp"
        android:layout_height="39dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/corners_bg_blue"
        android:gravity="center"
        android:text="确认修改"
        android:textColor="@color/write" />

</LinearLayout>