<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:app1="http://schemas.android.com/apk/res/com.qizhi.qilaiqiqu">

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
	<FrameLayout 
	     android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#f1f1f1"
            android:layout_gravity="bottom"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
            	android:layout_weight="1"
                android:layout_height="44dp"
                android:gravity="center_vertical|left"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="本周陪骑" />
                <TextView
                    android:id="@+id/txt_riderrecommend_weeknnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="#FF0000"
                    android:text="6" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="次" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:gravity="center_vertical|right"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="历史陪骑" />
                <TextView
                    android:id="@+id/txt_riderrecommend_historynum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="#FF0000"
                    android:text="4" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="次" />
            </LinearLayout>
        </LinearLayout>

        <com.qizhi.qilaiqiqu.utils.CircleImageViewUtil
            android:id="@+id/img_riderrecommend_photo"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/homepage_picture"
             />

        </FrameLayout>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#f1f1f1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#6DBEEC"
            android:text="陪骑区域" />
        <TextView
            android:id="@+id/txt_riderrecommend_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="浙江省" />
        <TextView
            android:id="@+id/txt_riderrecommend_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="杭州市" />
        <TextView
            android:id="@+id/txt_riderrecommend_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="余杭区" />

    </LinearLayout>
    <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#f1f1f1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#6DBEEC"
            android:text="陪骑描述" />
        <TextView
            android:id="@+id/txt_riderrecommend_describe"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="无论如何我都会在骑行的道路上走下去，这是我的理想与信念" />
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/little_return" />
    </LinearLayout>

</LinearLayout>