<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/riderAuthenticationActivity_second_back"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#6dbfed" >

        <LinearLayout
            android:id="@+id/layout_riderAuthenticationActivity_second_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/return_innavigationbar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/back"
                android:textColor="@color/write" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_riderAuthenticationActivity_second_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/text_riderAuthenticationActivity_title"
            android:textColor="@color/write"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/riderAuthenticationActivity_second_back"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:text="陪骑资料"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:background="@color/grays"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="陪骑价格" />

            <TextView
                android:id="@+id/edt_riderAuthenticationActivity_second_price"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="不填写默认免费"
                android:inputType="number"
                android:maxLength="5"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="元/h" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="陪骑时间" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_riderAuthenticationActivity_second_monday"
                    android:layout_width="0dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/corners_rider_time_white"
                    android:gravity="center"
                    android:text="周一"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_riderAuthenticationActivity_second_tuesday"
                    android:layout_width="0dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/corners_rider_time_white"
                    android:gravity="center"
                    android:text="周二"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_riderAuthenticationActivity_second_wednesday"
                    android:layout_width="0dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/corners_rider_time_white"
                    android:gravity="center"
                    android:text="周三"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_riderAuthenticationActivity_second_thuresday"
                    android:layout_width="0dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/corners_rider_time_white"
                    android:gravity="center"
                    android:text="周四"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_riderAuthenticationActivity_second_friday"
                    android:layout_width="0dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/corners_rider_time_white"
                    android:gravity="center"
                    android:text="周五"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_riderAuthenticationActivity_second_saturday"
                    android:layout_width="0dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/corners_rider_time_white"
                    android:gravity="center"
                    android:text="周六"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_riderAuthenticationActivity_second_sunday"
                    android:layout_width="0dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/corners_rider_time_white"
                    android:gravity="center"
                    android:text="周日"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_riderAuthenticationActivity_second_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:orientation="vertical"
                android:paddingBottom="5dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txt_riderAuthenticationActivity_second_7"
                        android:layout_width="40dp"
                        android:layout_height="39dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/corners_rider_time_white"
                        android:gravity="center"
                        android:text="7:00"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_riderAuthenticationActivity_second_8"
                        android:layout_width="40dp"
                        android:layout_height="39dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/txt_riderAuthenticationActivity_second_7"
                        android:layout_weight="1"
                        android:background="@drawable/corners_rider_time_white"
                        android:gravity="center"
                        android:text="8:00"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_riderAuthenticationActivity_second_9"
                        android:layout_width="40dp"
                        android:layout_height="39dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/txt_riderAuthenticationActivity_second_8"
                        android:layout_weight="1"
                        android:background="@drawable/corners_rider_time_white"
                        android:gravity="center"
                        android:text="9:00"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_riderAuthenticationActivity_second_10"
                        android:layout_width="40dp"
                        android:layout_height="39dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/txt_riderAuthenticationActivity_second_9"
                        android:layout_weight="1"
                        android:background="@drawable/corners_rider_time_white"
                        android:gravity="center"
                        android:text="10:00"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_riderAuthenticationActivity_second_11"
                        android:layout_width="40dp"
                        android:layout_height="39dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/txt_riderAuthenticationActivity_second_10"
                        android:layout_weight="1"
                        android:background="@drawable/corners_rider_time_white"
                        android:gravity="center"
                        android:text="11:00"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_riderAuthenticationActivity_second_12"
                        android:layout_width="40dp"
                        android:layout_height="39dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/txt_riderAuthenticationActivity_second_11"
                        android:layout_weight="1"
                        android:background="@drawable/corners_rider_time_white"
                        android:gravity="center"
                        android:text="12:00"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_riderAuthenticationActivity_second_13"
                        android:layout_width="40dp"
                        android:layout_height="39dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/txt_riderAuthenticationActivity_second_12"
                        android:layout_weight="1"
                        android:background="@drawable/corners_rider_time_white"
                        android:gravity="center"
                        android:text="13:00"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txt_riderAuthenticationActivity_second_14"
                        android:layout_width="40dp"
                        android:layout_height="39dp"
                        android:layout_below="@+id/txt_riderAuthenticationActivity_second_7"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/corners_rider_time_white"
                        android:gravity="center"
                        android:text="14:00"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_riderAuthenticationActivity_second_15"
                        android:layout_width="40dp"
                        android:layout_height="39dp"
                        android:layout_below="@+id/txt_riderAuthenticationActivity_second_7"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/txt_riderAuthenticationActivity_second_14"
                        android:layout_weight="1"
                        android:background="@drawable/corners_rider_time_white"
                        android:gravity="center"
                        android:text="15:00"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_riderAuthenticationActivity_second_16"
                        android:layout_width="40dp"
                        android:layout_height="39dp"
                        android:layout_below="@+id/txt_riderAuthenticationActivity_second_7"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/txt_riderAuthenticationActivity_second_15"
                        android:layout_weight="1"
                        android:background="@drawable/corners_rider_time_white"
                        android:gravity="center"
                        android:text="16:00"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_riderAuthenticationActivity_second_17"
                        android:layout_width="40dp"
                        android:layout_height="39dp"
                        android:layout_below="@+id/txt_riderAuthenticationActivity_second_7"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/txt_riderAuthenticationActivity_second_16"
                        android:layout_weight="1"
                        android:background="@drawable/corners_rider_time_white"
                        android:gravity="center"
                        android:text="17:00"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_riderAuthenticationActivity_second_18"
                        android:layout_width="40dp"
                        android:layout_height="39dp"
                        android:layout_below="@+id/txt_riderAuthenticationActivity_second_7"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/txt_riderAuthenticationActivity_second_17"
                        android:layout_weight="1"
                        android:background="@drawable/corners_rider_time_white"
                        android:gravity="center"
                        android:text="18:00"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_riderAuthenticationActivity_second_19"
                        android:layout_width="40dp"
                        android:layout_height="39dp"
                        android:layout_below="@+id/txt_riderAuthenticationActivity_second_7"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/txt_riderAuthenticationActivity_second_18"
                        android:layout_weight="1"
                        android:background="@drawable/corners_rider_time_white"
                        android:gravity="center"
                        android:text="19:00"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_riderAuthenticationActivity_second_20"
                        android:layout_width="40dp"
                        android:layout_height="39dp"
                        android:layout_below="@+id/txt_riderAuthenticationActivity_second_7"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/txt_riderAuthenticationActivity_second_19"
                        android:layout_weight="1"
                        android:background="@drawable/corners_rider_time_white"
                        android:gravity="center"
                        android:text="20:00"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="用户也可通过私信约定时间"
            android:textColor="#cccccc" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_riderAuthenticationActivity_second_next"
        android:layout_width="250dp"
        android:layout_height="39dp"
        android:layout_below="@+id/riderAuthenticationActivity_second_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:background="@drawable/corners_bg_blue"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_riderAuthenticationActivity_second_next"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="第2步，还有1步" />

</RelativeLayout>