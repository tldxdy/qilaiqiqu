<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ForgetActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#6dbfed" >

        <LinearLayout
            android:id="@+id/layout_forgetActivity_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/return_innavigationbar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="返回"
                android:textColor="@color/write" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/text_forgetactivity_title"
            android:textColor="@color/write"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txt_forgetActivity_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="@string/edit_forgrtactivity_phone" />

        <EditText
            android:id="@+id/edt_forgetActivity_phone"
            android:layout_width="200dp"
            android:layout_height="39dp"
            android:layout_alignLeft="@+id/txt_forgetActivity_phone"
            android:layout_below="@+id/txt_forgetActivity_phone"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_editext"
            android:maxLength="11"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:textSize="14sp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/btn_forgetActivity_send"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edt_forgetActivity_phone"
            android:layout_alignTop="@+id/edt_forgetActivity_phone"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/edt_forgetActivity_phone"
            android:background="@drawable/corners_bg_blue"
            android:gravity="center"
            android:text="@string/edit_forgrtactivity_send"
            android:textColor="@color/write"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_forgetActivity_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edt_forgetActivity_phone"
            android:layout_below="@+id/edt_forgetActivity_phone"
            android:layout_marginTop="15dp"
            android:text="@string/edit_forgrtactivity_code" />

        <EditText
            android:id="@+id/edt_forgetActivity_code"
            android:layout_width="200dp"
            android:layout_height="39dp"
            android:layout_alignLeft="@+id/txt_forgetActivity_code"
            android:layout_below="@+id/txt_forgetActivity_code"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_editext"
            android:ems="11"
            android:inputType="none"
            android:paddingLeft="10dp"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_forgetActivity_newPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="@string/text_forgetactivity_newpass"
            android:textColor="#e5e6e6" />

        <EditText
            android:id="@+id/edt_forgetActivity_newPass"
            android:layout_width="200dp"
            android:layout_height="39dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_editext"
            android:ems="11"
            android:focusable="false"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_forgetActivity_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="@string/text_forgetactivity_confirm"
            android:textColor="#e5e6e6" />

        <EditText
            android:id="@+id/edt_forgetActivity_confirm"
            android:layout_width="200dp"
            android:layout_height="39dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_editext"
            android:ems="11"
            android:focusable="false"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>