<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/riderAuthenticationActivity_back"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#6dbfed" >

        <LinearLayout
            android:id="@+id/layout_riderAuthenticationActivity_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/return_innavigationbar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/back"
                android:textColor="@color/write" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_riderAuthenticationActivity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/text_riderAuthenticationActivity_title"
            android:textColor="@color/write"
            android:textSize="18sp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/layout_riderAuthenticationActivity_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/rider_bg"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_riderAuthenticationActivity_isAgree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/unchoen_rider" />

                <TextView
                    android:id="@+id/txt_riderAuthenticationActivity_proviso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《陪骑士条款》"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_riderAuthenticationActivity_next"
                android:layout_width="250dp"
                android:layout_height="39dp"
                android:layout_marginBottom="80dp"
                android:background="@drawable/corners_bg_blue"
                android:gravity="center"
                android:text="继续完善资料"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_riderAuthenticationActivity_web"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:visibility="gone" >

            <WebView
                android:id="@+id/riderAuthenticationActivity_webview"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txt_riderAuthenticationActivity_agree"
                android:layout_width="fill_parent"
                android:layout_height="39dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/corners_bg_blue"
                android:gravity="center"
                android:text="同意"
                android:textColor="@color/white" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>