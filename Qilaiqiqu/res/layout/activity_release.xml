<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#6dbfed" >

                <LinearLayout
                    android:id="@+id/layout_releaseactivity_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/return_innavigationbar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/back"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_releaseactivity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center|right"
                    android:text="@string/text_releaseactivity_title"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_releaseactivity_publish"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="15dp"
                    android:background="#00000000"
                    android:gravity="center"
                    android:text="@string/button_releaseactivity_publish"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_releaseactivity_browse"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/txt_releaseactivity_publish"
                    android:background="#00000000"
                    android:gravity="center"
                    android:text="@string/button_releaseactivity_browse"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </RelativeLayout>
	<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
            <ListView
                android:id="@+id/list_releaseactivity_release"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#ffffffff"
                android:dividerHeight="20dp" >
            </ListView>
            </FrameLayout>
        </LinearLayout>

        
    

</LinearLayout>