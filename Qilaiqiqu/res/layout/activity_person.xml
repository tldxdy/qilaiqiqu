<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#6dbfed" >

        <LinearLayout
            android:id="@+id/layout_personalActivity_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/return_innavigationbar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="返回"
                android:textColor="@color/write" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/text_personactivity_title"
            android:textColor="@color/write"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
            android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <com.qizhi.qilaiqiqu.utils.CircleImageViewUtil
                    android:id="@+id/img_personActivity_photo"
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/homepage_picture" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_personActivity_nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_personActivity_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/male" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="@string/text_personactivity_point"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_personActivity_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0" />

                <ImageView
                    android:id="@+id/img_personActivity_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/mark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/text_personactivity_fans"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_personActivity_fansNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textColor="#FF4F55" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="44dp"
                    android:gravity="center_horizontal"
                    android:text="@string/text_personactivity_care"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_personActivity_careNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textColor="#FF4F55" />
            </LinearLayout>
            
            
       <RelativeLayout
        android:id="@+id/layout_rideractivity_activity_becomerider"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:background="#f2f2f2"
        android:layout_height="44dp" >

        <TextView
            android:id="@+id/txt_personActivity_attendRider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="已认证陪骑士" />

        <ImageView
            android:id="@+id/img_personActivity_rider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/txt_personActivity_attendRider"
            android:src="@drawable/set_sucessfully" />
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#f2f2f2" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="发表骑游记"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_personActivity_ridingNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/textView2"
            android:text="0"
            android:textColor="#FF0000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_personActivity_ridingNum"
            android:layout_alignBottom="@+id/txt_personActivity_ridingNum"
            android:layout_toRightOf="@+id/txt_personActivity_ridingNum"
            android:text="次"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_personActivity_joinNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/textView5"
            android:text="0"
            android:textColor="#FF0000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_personActivity_joinNum"
            android:layout_alignBottom="@+id/txt_personActivity_joinNum"
            android:layout_toRightOf="@+id/txt_personActivity_joinNum"
            android:text="次"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:text="参与的活动"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="次"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_personActivity_activityNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_toLeftOf="@+id/textView8"
            android:text="0"
            android:textColor="#FF0000"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_personActivity_activityNum"
            android:layout_alignBottom="@+id/txt_personActivity_activityNum"
            android:layout_toLeftOf="@+id/txt_personActivity_activityNum"
            android:text="带领活动"
            android:layout_marginRight="2dp"
            android:textSize="12sp" />
    </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="#f2f2f2"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="地址" />

                <TextView
                    android:id="@+id/txt_personActivity_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp" />

                <TextView
                    android:id="@+id/txt_personActivity_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp" />

                <TextView
                    android:id="@+id/txt_personActivity_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/text_personactivity_introduction"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_personActivity_introduce"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="@string/text_personactivity_signature" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"
                    android:layout_marginTop="50dp" >

                    <TextView
                        android:id="@+id/txt_personActivity_care"
                        android:layout_width="0dp"
                        android:layout_height="39dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/corners_bg_blue"
                        android:gravity="center"
                        android:text="@string/text_personactivity_careabit"
                        android:textColor="@color/write"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txt_personActivity_personal_letter"
                        android:layout_width="0dp"
                        android:layout_height="39dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/corners_bg_blue"
                        android:gravity="center"
                        android:text="@string/text_personactivity_personal_letter"
                        android:textColor="@color/write"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
            
        </LinearLayout>
    </ScrollView>
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <LinearLayout
                android:id="@+id/layout_personActivity_button1"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="#00000000"
                android:visibility="gone"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_personActivity_txt1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/corners_bg_ao2"
                    android:gravity="center"
                    android:text="同意"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txt_personActivity_txt2"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/corners_bg_ao"
                    android:gravity="center"
                    android:text="拒绝"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_personActivity_button2"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/txt_personActivity_txt3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="已拒绝"
                    android:textColor="@color/white" />
            </LinearLayout>
        </FrameLayout>
</LinearLayout>