<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#6dbfed" >

        <LinearLayout
            android:id="@+id/layout_activityactivityapply_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/return_innavigationbar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="返回"
                android:textColor="@color/write" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/title_activityactivity_title"
            android:textColor="@color/write"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="发起人"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="76dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_activity_activity_apply_layout"
                android:orientation="vertical" >

                <com.qizhi.qilaiqiqu.utils.CircleImageViewUtil
                    android:id="@+id/img_activityactivityapply_photo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/homepage_picture" />

                <TextView
                    android:id="@+id/txt_activityactivityapply_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_activityactivityapply_photo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="小伙子" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="已报名成员"
                android:textSize="16sp" />

            <GridView
                android:id="@+id/gridView__activityactivityapply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:horizontalSpacing="10dp"
                android:numColumns="4" >
            </GridView>

            <TextView
                android:id="@+id/txt_activityactivityapply_cancel"
                android:layout_width="225dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:background="@drawable/corners_bg_blue"
                android:gravity="center"
                android:text="@string/text_activityactivity_cancel"
                android:textColor="@color/write"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>