<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout     
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" >
    <ImageView
        android:id="@+id/img_managefragment_photo"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/bitmap_homepage" />

    <com.qizhi.qilaiqiqu.utils.RotateTextView
        android:id="@+id/txt_managefragment_money"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/img_managefragment_photo"
        android:layout_alignTop="@+id/img_managefragment_photo"
        android:background="@drawable/yellow_tag"
        android:gravity="center_vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="6dp"
        android:text="收费"
        android:textSize="8sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_managefragment_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:text="标题" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="时间：" />
            <TextView
                android:id="@+id/txt_managefragment_years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="2016.01.18" />
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="预估时间：" />
            <TextView
                android:id="@+id/txt_managefragment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="22天6小时" />
            
        </LinearLayout>
        <TextView
            android:id="@+id/txt_managefragment_detailed_information"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="5dp"
            android:textColor="#6dbfed"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:text="详细信息>>" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_managefragment_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/activity_apply" />
            <TextView
            android:id="@+id/txt_managefragment_apply"    
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:text="已报名" />
            
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>
