<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccf5f5f5"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/edt_releaseactivity_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_edittext"
        android:hint="@string/edit_releaseactivity_content"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:paddingLeft="10dp"
        android:textColor="#a1a1a1"
        android:textSize="16sp" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img_releaseactivity_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/img_releaseactivity_dealta"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:src="@drawable/delta_white" />

        <LinearLayout
            android:id="@+id/layout_releaseactivity_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|top"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_releaseactivity_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_picture" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#ccf5f5f5"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_releaseactivity_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/location_set" />

        <TextView
            android:id="@+id/txt_releaseactivity_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/text_releaseactivity_location"
            android:textSize="14sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_releaseactivity_legend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:hint="@string/edit_releaseactivity_legend"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:paddingLeft="10dp"
        android:textColor="#a1a1a1"
        android:textSize="16sp" >
    </EditText>

</LinearLayout>