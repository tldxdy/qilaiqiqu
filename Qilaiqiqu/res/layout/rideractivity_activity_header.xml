<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_rideractivity_activity"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/rider"
        android:tileMode="repeat"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="39dp"
            android:layout_marginBottom="20dp"
            android:text="本周陪骑推荐" />

        <LinearLayout
            android:id="@+id/layout_rideractivity_activity_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           	android:gravity="center"
            android:orientation="horizontal" >


        </LinearLayout>
	
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#f6f6f6"
        android:layout_height="44dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="陪骑，让骑行不再孤单!" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/little_return" />
        
    </RelativeLayout>
    <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffffff"/>
    <RelativeLayout
        android:id="@+id/layout_rideractivity_activity_becomerider"
        android:layout_width="match_parent"
        android:background="#f6f6f6"
        android:layout_height="44dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我要成为陪骑士" />
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/little_return" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/textView1"
            android:src="@drawable/set_sucessfully" />
        
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_rideractivity_activity"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:textColor="#6dbfed"
        android:visibility="gone"
        android:textSize="18sp"
        android:text="发现活动" />

</LinearLayout>
