<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    
    <com.qizhi.qilaiqiqu.utils.CircleImageViewUtil
        android:layout_marginLeft="10dp"
            android:id="@+id/img_messageList_system_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/demo"
            app:border_color="@color/dark"
            app:border_width="2dp" />

    <TextView
        android:id="@+id/txt_messageList_system_messagetype"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/text_messageList_messagetype" />

    <TextView
        android:id="@+id/txt_messageList_system_message"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:singleLine="true"
        android:text="@string/text_messageList_message" />
    
</LinearLayout>
