<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/img_ridingList_picture"
        android:layout_width="fill_parent"
        android:layout_height="270dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
    	android:layout_marginRight="5dp"
        android:background="@drawable/bitmap_homepage"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/layout_ridingList"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
    	android:layout_marginRight="5dp"
        android:background="#40ffffff" >

        <TextView
            android:id="@+id/txt_ridingList_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_ridingList_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/txt_ridingList_title"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txt_ridingList_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/txt_ridingList_time"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/rerurn_little_white" />
    </RelativeLayout>

</FrameLayout>